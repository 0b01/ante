

fun pow: i32 base exponent => i32
    if exponent == 0 then
        1
    else if exponent % 2 == 0 then
        let v = pow base (exponent / 2)
        v * v
    else
        base * pow base (exponent - 1)

fun run: i32 base times
    if times > 0 then
        printf "%d^%d = %d\n" base times (pow base times)
        run base (times - 1)

run 2 16
