

i32 pow: i32 base exponent
    if exponent == 0
        return 1
    elif exponent % 2 == 0
        let v = pow(base, exponent / 2)
        return v * v
    else
        return base * pow(base, exponent - 1)


void run: i32 base times
    if times > 0
        printf("%d^%d = %d\n", base, times, pow(base, times))
        run(base, times - 1)

run(2, 16)
