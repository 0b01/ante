~string module
import "string"

String msg = "Hello World!"

msg = msg.repl("Hello", "Goodbye")
msg.=repl("Goodbye", "Hello")

assert(msg == "Hello World!")

msg.=replRegex("[a-z]+", "ey")
assert(msg == "Hey World!")


~op module
import "op"

ext String
 
    bool op('?'):
        if this == "true"
            return true
        return false

    String infix('pop', prec('..')):
        return this[0 .. this.last-1]


