
type Maybe 'm =
   | Some 'm
   | None

type List 't = Maybe (ref Node 't) first, Maybe (ref Node 't) last

type Node 't = 't elem, Maybe (ref Node 't) next

fun Node 't.init: 't elem -> Node 't
    Node(elem, None)

fun List 't.init: 't elem -> List 't
    let n = new Node elem
    List(Some n, Some n)


fun append: mut List 't l, 't elem
    let n = new Node elem

    match l.last with
    | Some last ->
        last.next := Some n
        l.last := Some n
    | None ->
        l.first := Some n
        l.last := Some n


fun printne: List l
    match l.first with
    | Some n -> printne "[ "; printne n
    | None -> printne "[ ]"


fun printne: ref Node l
    printne l.elem
    match l.next with
    | Some n -> printne ", "; printne n
    | None -> printne " ]"


fun (++): i32 l r =
    mut list = List l
    append list r
    list

fun (++): mut List i32 l, i32 r =
    append l r
    l


mut head = List 0

append head 1
append head 2
append head 3

print head

