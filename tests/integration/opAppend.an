
//Reverse a string
fun reverse: Str s -> Str
    mut buf = ref c8 malloc s.len

    mut i = 0usz
    while i < s.len do
        buf#i = s.cStr#(s.len-i-1)
        i += 1

    buf#i := '\0'
    Str(buf, i)


//append an integer to a string
fun (++): Str l, i32 r -> Str
  
    //get the string form of an integer, but in reverse
    fun rev_str: i32 x -> Str
        mut buf = ref c8 malloc 12
        mut i = 0usz
        mut n = x

        while n > 0 do
            buf#i := c8(n %10) + '0'
            i += 1
            n /= 10

        buf#i := '\0'
        Str(buf, i)

    l ++ reverse (rev_str r)


