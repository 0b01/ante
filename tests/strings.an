let openingMsg = "Hello World!\n"

fun getClosingMsg: => [c8]
    return "Goodbye World!\n"

printf("%s%s", openingMsg, getClosingMsg())


type Str = [c8] cStr, u32 length

fun print: Str s
    puts(s.cStr)


let str = Str("test", 4)
print(str)

print( Str("str", 3) )



~Gets the length of null-terminated strings.
~Same as strlen from the c library.
fun len: [c8] s => i32
    var acc = 0
    while s[acc] != 0u8 do
        acc += 1
    return acc


fun makeStr: [c8] rawStr => Str
    return (rawStr, len(rawStr))


printf("len of %s = %d\n", openingMsg, len(openingMsg))
