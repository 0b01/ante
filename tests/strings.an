fun len_rec: c8[] s, i32 i l => i32
    if s[i] == 0u8
        return l
    return len_rec(s, i+1, l+1)

fun len: c8[] s => i32
    return len_rec(s, 0, 0)



fun makeStr: c8[] rawStr => Str
    return (rawStr, len(rawStr))


